@model LoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="my-2"></div>
		<form asp-action="Login">
			<div class="my-3">
				<input asp-for="Email" class="form-control" placeholder="Email" />
				<span asp-validation-for="Email"></span>
			</div>
			<div class="my-3">
				<input asp-for="Password" class="form-control" placeholder="Password" />
				<span asp-validation-for="Password"></span>
			</div>
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<b><span>Remember Me</span></b>
				</label>
			</div>
			<input type="submit" value="Login">
		</form>
		<p>Don't Have An Account? <a asp-action="Register">Register Now!</a></p>
	</div>
</div>

@section Registration_Validation_Section {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

