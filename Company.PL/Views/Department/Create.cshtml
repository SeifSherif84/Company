@model DepartmentDto
@{
    ViewData["Title"] = "Create";
}

<h1>Create Department</h1>
<br />
<br />

<form asp-controller="Department" asp-action="Create">

    <partial name="PartialView/Create_Update_PartialView" />

    <div class="my-3">
        <input type="submit" value="Create" class="btn btn-primary" />
