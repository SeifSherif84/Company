@model Department
@{
    ViewData["Title"] = "Update";
}

<h1>Update Department</h1>

<br />
<br />

<form asp-controller="Department" asp-action="Update" @* asp-route-Id="@Model.Id" *@>
@*     <input asp-for="Id" type="hidden"/> *@
    <div class="my-3">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span> 
    </div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="CreatedAt" class="col-form-label"></label>
        <input asp-for="CreatedAt" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>

@section Validation_Section {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}