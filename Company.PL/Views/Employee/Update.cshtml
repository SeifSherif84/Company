@model EmployeeDto 
@{
    ViewData["Title"] = "Update";
}

<h1>Update Employee</h1>

<br />
<br />

<form asp-controller="Employee" asp-action="Update" enctype="multipart/form-data">
    <input asp-for="ImageName" hidden/>
    <partial name="PartialView/Create_Update_PartialView" />

    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>

@section Validation_Section {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}